  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "$ref": "#/components/schemas/users"
      },
      "Board": {
        "$ref": "#/components/schemas/boards"
      },
      "Column": {
        "$ref": "#/components/schemas/columns"
      },
      "Task": {
        "$ref": "#/components/schemas/tasks"
      },
      "Session": {
        "$ref": "#/components/schemas/sessions"
      },
      "NeedHelp": {
        "$ref": "#/components/schemas/needHelp"
      },
      "users": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "email",
          "password",
          "theme",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "example": "65a1fc77e4b0a12d34f44444"
          },
          "name": {
            "type": "string",
            "example": "Emre Ceyhan"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@mail.com"
          },
          "password": {
            "type": "string",
            "description": "Hashed password",
            "example": "$2b$10$abc...",
            "writeOnly": true
          },
          "photo": {
            "type": "string",
            "default": "",
            "example": "https://cdn.example.com/avatar.png"
          },
          "theme": {
            "type": "string",
            "enum": [
              "light",
              "dark",
              "system"
            ],
            "default": "dark",
            "example": "dark"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2026-01-16T13:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2026-01-16T13:00:00.000Z"
          }
        }
      },
      "needHelp": {
        "type": "object",
        "required": [
          "_id",
          "email",
          "comment"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "example": "65a1f6a9e4b0a12d34f11111"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@mail.com"
          },
          "comment": {
            "type": "string",
            "example": "I need help with my board"
          }
        }
      },
      "boards": {
        "type": "object",
        "required": [
          "_id",
          "title",
          "userId",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "example": "65a1f2c9e4b0a12d34f56789"
          },
          "title": {
            "type": "string",
            "example": "My Board"
          },
          "userId": {
            "type": "string",
            "description": "MongoDB ObjectId reference to User",
            "example": "65a1f2b7e4b0a12d34f12345"
          },
          "icon": {
            "type": "string",
            "default": "none",
            "example": "none"
          },
          "background": {
            "type": "string",
            "default": "none",
            "example": "none"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2026-01-15T18:22:10.123Z"
          },
          "updatedAt": {
